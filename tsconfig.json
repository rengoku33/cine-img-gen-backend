{
  "compilerOptions": {
    "module": "ESNext",             // Ensure module is ESNext (ESM)
    "moduleResolution": "bundler",  // Use bundler to resolve ESM imports
    "esModuleInterop": true,        // Allows ESM imports for CJS modules
    "skipLibCheck": true,
    "target": "ES2020",
    "resolveJsonModule": true,
    "strict": true,
    "allowImportingTsExtensions": true,  // Allow TypeScript imports with .ts extension
    "noEmit": true  // Don't output .js files; only type-checking
  },
  "include": [
    "src/**/*.ts"
  ]
}
